{
  "name": "standard-www",
  "description": "Website for standard/standard - http://www.standardjs.com",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/standard/standard-www/issues"
  },
  "dependencies": {
    "github-slugger": "^1.0.1",
    "handlebars": "^4.0.3",
    "marky-deep-links": "^1.0.0",
    "sitedown": "^3.3.0"
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "catw": "^1.0.1",
    "ecstatic": "^1.4.0",
    "less": "^2.6.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.1",
    "shelljs": "^0.6.0",
    "standard": "*"
  },
  "homepage": "https://github.com/standard/standard-www",
  "keywords": [
    "site",
    "standard",
    "web",
    "website",
    "www"
  ],
  "license": "ISC",
  "main": "gensite.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/standard/standard-www.git"
  },
  "scripts": {
    "build-css": "catw -c 'lessc --include-path=layout/style -' 'layout/style/*.less' > dist/main.css",
    "build-html": "./prepare.sh",
    "build-js": "browserify browser/app.js > dist/standard-www.js",
    "clean": "rimraf dist/* && mkdirp dist",
    "serve": "ecstatic dist",
    "start": "npm run clean && npm run build-css && npm run build-html && npm run build-js",
    "test": "standard"
  }
}
